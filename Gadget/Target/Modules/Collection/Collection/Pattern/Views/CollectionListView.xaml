<base:ViewChildBase x:Class="Gadget.Collection.Pattern.Views.TCollectionListView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:base="clr-namespace:rr.Library.Infrastructure;assembly=rr.Library.Infrastructure"
                    xmlns:converters="clr-namespace:rr.Library.Converter;assembly=rr.Library.Converter"
                    xmlns:caliburn="http://www.caliburnproject.org"
                    DataContext="{x:Null}"
                    x:Name="ModuleCollectionListViewModel">

    <UserControl.Resources>
        <converters:TCollectionToBitmapImageConverter  x:Key="CollectionToBitmapImageConverter" />

        <CollectionViewSource x:Key="MaterialModelItemsViewSource"
                              Source="{Binding Model.MaterialItemsSource}">
        </CollectionViewSource>

        <CollectionViewSource x:Key="TargetModelItemsViewSource"
                              Source="{Binding Model.TargetItemsSource}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="GadgetMaterialModel.Material" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <DataTemplate x:Key="TargetListDataTemplate">
            <Border Padding="2"
                    BorderThickness="0 .1 0 .1"
                    BorderBrush="LightGray"
                    Width="210">

                <!-- busy, name, disable-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--busy-->
                    <Border Grid.Column="0"
                            Padding="0 0 3 0">
                        <ContentControl Visibility="{Binding BusyVisibility}"
                                        Style="{DynamicResource ContentBusyIcon}" />
                    </Border>

                    <!--material, name-->
                    <Border Grid.Column="1">
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="0 0 5 0"
                                   Width="16"
                                   Height="16"
                                   Source="{Binding GadgetMaterialModel.Image, Converter={StaticResource CollectionToBitmapImageConverter}}" />

                            <TextBlock Text="{Binding Name}"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>

                    <!--disable-->
                    <Border Grid.Column="2"
                            Padding="3 0 0 0">
                        <ContentControl Visibility="{Binding DisableVisibility}"
                                        Style="{DynamicResource DisableIcon}" />
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Border Padding="6"
            Width="240">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--Material-->
            <Border Grid.Row="0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0">
                            <TextBlock Text="material" />
                        </Border>

                        <Border Grid.Column="1">
                            <TextBlock HorizontalAlignment="Right"
                                       Text="{Binding Model.MaterialCount}" />
                        </Border>
                    </Grid>

                    <ComboBox x:Name="MaterialList"
                              ItemsSource="{Binding Source={StaticResource MaterialModelItemsViewSource}}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding Model.MaterialSelected}"
                              caliburn:Message.Attach="[Event SelectionChanged] = [OnMaterialSelectionChanged (MaterialList.SelectedIndex)]" />
                </StackPanel>
            </Border>

            <!--target list-->
            <Border Grid.Row="1"
                    Padding="0 10 0 0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0">
                            <TextBlock Text="target" />
                        </Border>

                        <Border Grid.Column="1">
                            <TextBlock HorizontalAlignment="Right"
                                       Text="{Binding Model.TargetCount}" />
                        </Border>
                    </Grid>

                    <ListBox x:Name="TargetList"
                             SelectedIndex="{Binding Model.TargetSelectedIndex}"
                             ItemsSource="{Binding Source={StaticResource TargetModelItemsViewSource}}"
                             ItemTemplate="{StaticResource TargetListDataTemplate}"
                             caliburn:Message.Attach="[Event SelectionChanged] = [OnTargetSelectionChanged (TargetList.SelectedItem)]" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>

</base:ViewChildBase>
